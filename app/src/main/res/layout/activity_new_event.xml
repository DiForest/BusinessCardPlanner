<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <include layout="@layout/toolbar" />

        <EditText
            android:id="@+id/edit_title"
            android:layout_height="64dp"
            android:layout_width="fill_parent"
            android:hint="Enter Title"
            android:textSize="24dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/edit_description"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:inputType="textMultiLine"
            android:lines="2"
            android:padding="5dp"
            android:hint="Description" />

        <GridLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:columnCount="2"
            android:rowCount="8"
            android:orientation="horizontal">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_calendar_purple"
                android:padding="8dp"/>

            <Switch
                android:id="@+id/switch_all_day"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:textSize="16dp"
                android:textOff="No"
                android:textOn="Yes"
                android:text="All Day"
                android:paddingLeft="16dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_calendar_purple"
                android:padding="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_start_date"
                    android:layout_height="52dp"
                    android:layout_width="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="23/4/2015"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/txt_start_time"
                    android:layout_height="52dp"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="23:00"
                    android:textSize="16dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/icon_blank"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:padding="8dp"/>

            <LinearLayout
                android:id="@+id/end_date_time_sector"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_end_date"
                    android:layout_height="52dp"
                    android:layout_width="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="23/4/2015"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_end_time"
                    android:layout_height="52dp"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="23:00"
                    android:textSize="16dp"/>

            </LinearLayout>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_location_purple"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/txt_location"
                android:layout_height="48dp"
                android:layout_width="fill_parent"
                android:paddingLeft="16dp"
                android:hint="Location"
                android:layout_marginRight="50dp"
                android:textSize="16dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_people_purple"
                android:padding="8dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_people"
                    android:layout_height="52dp"
                    android:layout_width="wrap_content"
                    android:padding="16dp"
                    android:text="Invite People"
                    android:textSize="16dp"/>

                <ImageView
                    android:id="@+id/invite_people_cancel"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_cross_purple"
                    android:padding="8dp"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/people_image"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/input_people"
                android:layout_height="52dp"
                android:layout_width="fill_parent"
                android:padding="16dp"
                android:visibility="gone"
                android:hint="Invite People"
                android:textSize="16dp"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="8dp" />

            <LinearLayout
                android:id="@+id/add_people_layout"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/peo"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="8dp" />

            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>