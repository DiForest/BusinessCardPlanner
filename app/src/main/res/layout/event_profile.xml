<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="LALALA"
            android:id="@+id/event_title"
            android:textSize="40dp"
            android:textColor="#ffff"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"/>
        </LinearLayout>

    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:columnCount="2"
        android:rowCount="8"
        android:orientation="horizontal"
        android:layout_weight="9">

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_calendar_purple"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/txt_start_date"
            android:layout_height="52dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="23/4/2015"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/blank_end_date_image"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_calendar_purple"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/txt_end_date"
            android:layout_height="52dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="23/4/2015"
            android:textSize="16dp"/>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_notification_purple"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/reminder"
            android:layout_height="52dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="23/4/2015"
            android:textSize="16dp"/>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_people_purple"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/invited_people"
            android:layout_height="52dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="23/4/2015"
            android:textSize="16dp"/>

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_note_purple"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/note"
            android:layout_height="52dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="23/4/2015"
            android:textSize="16dp"/>
        </GridLayout>

    <Button
        android:id="@+id/btn_edit_event"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:text="Edit" />
</LinearLayout>