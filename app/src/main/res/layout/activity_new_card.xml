<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/toolbar" />
    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

        <!-- the background layout-->
        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:padding="10dip"
            android:orientation="vertical">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="200dip"
                android:id="@+id/image"
                android:layout_margin="5dip"
                android:background="@drawable/round_corner" />

                <!-- name-->
                <EditText
                    android:layout_above="@+id/image"
                    android:id="@+id/name_label"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:layout_margin="5dip"
                    android:background="@drawable/round_corner"
                    android:drawableLeft="@drawable/ic_single_ppl_grey"
                    android:hint="Name"/>

                <!--job -->
                <EditText
                    android:id="@+id/job_label"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:layout_margin="5dip"
                    android:background="@drawable/round_corner"
                    android:drawableLeft="@drawable/ic_beg_grey"
                    android:hint="job" />

                <!-- company name-->
                <EditText
                    android:id="@+id/company_label"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:layout_margin="5dip"
                    android:background="@drawable/round_corner"
                    android:drawableLeft="@drawable/ic_beg_grey"
                    android:hint="Company name" />

                <!-- email-->
                <EditText
                    android:id="@+id/email_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:layout_margin="5dip"
                    android:background="@drawable/round_corner"
                    android:drawableLeft="@drawable/ic_mail_grey"
                    android:hint="email" />

                <!-- phone-->
                <EditText
                    android:id="@+id/phone_label"
                    android:hint="phone number"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:layout_margin="5dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_mobile_grey"
                    android:background="@drawable/round_corner"/>

                <!-- address-->
                <EditText
                    android:id="@+id/address_label"
                    android:hint="address"
                    android:padding="10dp"
                    android:layout_margin="5dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner"
                    android:drawableLeft="@drawable/ic_map_grey"
                    android:textSize="18sp"/>

            <!-- company phone-->
            <EditText
                android:id="@+id/phone_company_label"
                android:hint="Company phone number"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_margin="5dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mobile_grey"
                android:background="@drawable/round_corner"/>

            <!-- company address-->
            <EditText
                android:id="@+id/address_company_label"
                android:hint="Company address"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_margin="5dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_map_grey"
                android:background="@drawable/round_corner"/>

            <!-- company web-->
            <EditText
                android:id="@+id/web_company_label"
                android:hint="Company website"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_margin="5dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_internet_grey"
                android:background="@drawable/round_corner"/>

            </LinearLayout>
        </ScrollView>
</LinearLayout>